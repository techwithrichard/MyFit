<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/logoColor</item>
        <item name="colorPrimaryVariant">@color/deep_purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/neon_green</item>
        <item name="colorSecondaryVariant">@color/electric_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_space</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Text appearance -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeader1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextHeader2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/logoColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/electric_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/electric_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/electric_blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Social Button Styles -->
    <style name="SocialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/text_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_secondary</item>
        <item name="android:alpha">0.2</item>
    </style>

    <!-- Error Text Style -->
    <style name="ErrorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/coral_red</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>